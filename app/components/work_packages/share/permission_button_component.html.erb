<%=
  render(Primer::Alpha::ActionMenu.new(select_variant: :single, dynamic_label: true, color: :subtle)) do |menu|
    menu.with_show_button do |button|
      button.with_trailing_action_icon(icon: :"triangle-down")
      permission_name(@permission_value)
    end
    options.each do |option|
      menu.with_item(label: option[:label], value: option[:value], active: option[:value] == @permission_value)
    end
  end
%>
