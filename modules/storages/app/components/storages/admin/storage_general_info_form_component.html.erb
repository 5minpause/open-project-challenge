<%=
  primer_form_with(
    model: storage,
    url: admin_settings_storage_path(storage),
    method: :patch
  ) do |form|
    flex_layout do |general_info_row|
      general_info_row.with_column do
        render(Storages::Admin::ProviderTypeSelectForm.new(form))
      end

      general_info_row.with_column do
        render(Primer::Beta::Button.new(scheme: :primary, type: :submit)) { I18n.t('storages.buttons.save_and_continue') }
      end

      general_info_row.with_column do
        render(Primer::Beta::Button.new(scheme: :default, tag: :a, href: edit_admin_settings_storage_path(storage))) { I18n.t('button_cancel') }
      end
    end
  end
%>
